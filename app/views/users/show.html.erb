<section class="content-sidebar">
  <div class="profile-picture">
		<a href="#"><%= image_tag @user.avatar.url(:medium) %></a>
	</div>
  
  <div class="profile-info">
    <h2><%= @user.fname + " " + @user.lname %></h2>
		<% if @user == current_user %>
			<%= button_to "Edit", edit_user_registration_url, method: :get %>
      <%= button_to "New Event", new_event_path, method: :get, class: "update-button created" %>
		<% end %>
    <p>
      <strong>[ username ] </strong><%= @user.username %><br>
      <strong>[ email ] </strong> <%= @user.email %> 
    </p>
  </div>
  
  <nav class="profile-nav">
    <ul>
      <li><a class="attending-events-button" href="#">Attending Events</a></li>
      <li><a class="created-events-button" href="#">Created Events</a></li>
      <% if @user == current_user %>
        <li><a class="upcoming-occurrences-button" href="#">Upcoming Events</a></li>
      <% end %>
      <li><a class="users-friends-button" href="#">Friends</a></li>
    </ul>
  </nav>
</section>

<section class="content-main">
  
  <header class="content-header">
    <h1><%= @user.username %></h1>
  </header>
  
  <div class="posts">
    <article class="post-event">
    </article>
      
    <article class="post attending">
      <%= render partial: "occurrences/attending_events", locals: {user: @user, attending_events: @attending_events} %>
    </article>
  
    <article class="post created hide">
      <%= render partial: "events/created_events", locals: {user: @user} %>
    </article>
    
    <% if @user == current_user %>
    <article class="post monthly-occurrences">
      <%= render partial: "occurrences/upcoming_occurrences", locals: {user: @user, occurrences: @occurrences} %>
    </article>
    <% end %>
  </div>
  
</section>