<header class="header">
  <div class="header-wrap group">
    
    <h1 class="header-logo">
      <a href="/">Event Manager</a>
    </h1>
    
    <nav class="header-nav">
      <ul class="group">
				<li><a class="about-button" href="#">About</a></li>
				
				<% if user_signed_in? %>
					<li><a href="<%= users_path %>">Home</a></li>
					<li>
						<a href="<%= user_path(current_user.id) %>">
							<%= current_user.username %>
						</a>
					</li>
					<li><a href="#">Settings</a></li>
					<li>
						<a id="logout-button" href="<%= destroy_user_session_path %>" data-method="delete">Logout</a>
					</li>
				<% else %>
					<li>
						<a href="<%= new_user_registration_path %>">
							Create a New Account?
						</a>
					</li>
					<li>
						<a id="login-button" href="<%= new_user_session_path %>">
							Login
						</a>
					</li>
				<% end %>
      </ul>
    </nav>
    
  </div>
</header>