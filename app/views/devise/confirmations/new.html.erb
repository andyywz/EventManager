<h2 class="session-header">Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-field"><%= f.label :login, "Username or Email" %><br />
  <%= f.text_field :login, :autofocus => true %></div>

  <div class="session-button"><%= f.submit "Resend confirmation instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
