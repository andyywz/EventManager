<h2 class="session-header">Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-field"><%= f.label :login, "Username or Email" %><br />
  <%= f.text_field :login, :autofocus => true %></div>

  <div class="session-button"><%= f.submit "Send me reset password instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
