<h1 class="big-title">
	Edit Event Page
</h1>

<%= form_for(@event, :url => event_path(@event), :method => :put, html: {id: "event-edit-form"}) do |f| %>
	<%= f.label :name, "Event Name: " %><br>
	<%= f.text_field :name %><br>
	
	<%= f.label :place, "Venue: " %><br>
  <%= f.text_field :place %><br>
	
  <%= f.label :cover, "Cover/Fee: " %><br>
  <%= f.number_field :cover %><br>	
	
  <%= f.label :age_limit, "Age Limit: " %><br>
  <%= f.number_field :age_limit, {min: 0, max: 21, step: 21} %><br>
	
  <%= f.label :body, "ETC: " %><br>
  <%= f.text_area :body, size: "41x3" %><br>
  
  <%= f.submit %>
<% end %>

<div class="occurrences-edit">
  
  <%= render partial: "occurrences/create", locals: { occurrences: @occurrences } %>
  
</div>

<div class="occurrences-new">
  <%= button_to "New Occurrence", new_event_occurrence_path(@event.id), method: :get, remote: true, class: "new-button edit" %>
  <div class="form-container"></div>
</div>

<script>
$(document).ready(function () {
  eventsEdit();
  occurrencesCreate();
});
</script>