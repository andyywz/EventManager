<%= form_for(@event, :url => event_path(@event), :method => :put, html: {id: "event-edit-form"}) do |f| %>
	<%= f.label :name, "Event Name: " %><br>
	<%= f.text_field :name %><br>
	
	<%= f.label :place, "Venue: " %><br>
  <%= f.text_field :place %><br>
	
  <%= f.label :cover, "Cover/Fee: " %><br>
  <%= f.number_field :cover %><br>	
	
  <%= f.label :age_limit, "Age Limit: " %><br>
  <%= f.number_field :age_limit, {min: 0, max: 21, step: 21} %><br>
	
  <%= f.label :body, "ETC: " %><br>
  <%= f.text_area :body, size: "80x4" %><br>
  
  <%= f.submit %>
<% end %>

<div class="occurrences-edit">
  <ul class="occurrences-list">
    <% @occurrences.each do |o| %>
      <li class="group">
        <label for="occurrence_date">Date: </label>
        <input class="occurrence_date" name="occurrence[date]" type="date" value="<%= o.event_time.strftime('%Y-%m-%d') %>">

        <label for="occurrence_time">Time: </label>
        <input class="occurrence_time" name="occurrence[time]" type="time" value="<%= o.event_time.strftime("%H:%M") %>">
        
        <div class="buttons group">
        <%= button_to "Save", occurrence_path(o.id), method: :put, class: "update-button edit", remote: true %>
        <%= button_to "Destroy", occurrence_path(o.id), method: :delete, confirm: "Are you sure?", remote: true, class: "destroy-button edit" %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @occurrences %>
</div>