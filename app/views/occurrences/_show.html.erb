<div class="event-title group">
	<h2 class="event-name">
		<%= @occurrence.event.name %>
	</h2>
	<time data-datestamp="<%= @occurrence.event_time.to_i %>" class="event-time">
		<%= @occurrence.event_time.strftime('%a %b %d %Y') %>
		<%= @occurrence.event_time.strftime('%I:%M %p') %>
	</time>
</div>

<div class="event-content">
	
	<% if @occurrence.event.place %>
		<label>Venue: <%= @occurrence.event.place %></label>
	<% end %>

	<% if @occurrence.event.cover %>
		<label>Cover: <%= @occurrence.event.cover %></label>
	<% end %>
	
	<% if @occurrence.event.age_limit %>
		<label>Age Limit: <%= @occurrence.event.age_limit %></label>
	<% end %>

	<% if @occurrence.event.body %>
		<label>ETC: 
			<div class="etc">
				<%= @occurrence.event.body %>
			</div>
		</label>
	<% end %>
	
</div>